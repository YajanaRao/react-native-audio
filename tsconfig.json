{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "es5" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019' or 'ESNEXT'. */,
    "lib": ["es2015", "dom"],
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "types": ["react", "jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
